<!DOCTYPE html>
<html ng-app="app">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
</head>
<body>

<ng-view></ng-view>

<!-- Libraries -->
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-route.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-resource.min.js"></script>
<script src="/javascripts/ui-bootstrap-tpls.min.js"></script>
<script src="/javascripts/todoapp.js"></script>
  
<!-- Template -->   
<script type="text/ng-template" id="/todos.html">
  <div class="form-group">
    <label class="col-sm-1 control-label">Search</label>
    <div class="col-sm-11">
       <input type="text" ng-model="search.name" class="form-control">
    </div>
  </div>
  <div>
  <ul class="list-unstyled">
    <li ng-repeat="todo in todos | filter: search">
      <div class="form-group">
        <input type="checkbox" ng-model="todo.completed" ng-change="update($index)" class="col-sm-1">
          <a ng-show="!editing[$index]" href="#/" class="col-sm-2">{{todo.name}}</a>
          <button ng-show="!editing[$index]" ng-click="edit($index)" class="btn btn-default">edit</button>
          <button ng-show="!editing[$index]" ng-click="remove($index)" class="btn btn-default">remove</button>

          <input ng-show="editing[$index]" type="text" ng-model="todo.name">
          <button ng-show="editing[$index]" ng-click="update($index)" class="btn btn-default">update</button>
          <button ng-show="editing[$index]" ng-click="cancel($index)" class="btn btn-default">cancel</button>
        </div>
      </li>
    </ul>
  </div>
  New task <input type="text" ng-model="newTodo"><button ng-click="save()" class="btn btn-default">create</button>
</script>

<script type="text/ng-template" id="/todoDetails.html">
  <h1>{{ todo.name }}</h1>
  completed: <input type="checkbox" ng-model="todo.completed"><br>
  note: <textarea ng-model="todo.note"></textarea><br><br>

  <button ng-click="update()" class="btn btn-default">update</button>
  <button ng-click="remove()" class="btn btn-default">remove</button>
  <a href="/">cancel</a>
</script>

</body>
</html>
